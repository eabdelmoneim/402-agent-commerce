# Client Configuration
API_BASE_URL=http://localhost:3001/api
MERCHANT_API_URL=http://localhost:3001/api

# Development Configuration
# NGROK_FETCH_URL - Used in development for external access to merchant API (e.g., from thirdweb servers)
# This URL is used instead of API_BASE_URL when NODE_ENV=development for the x402/fetch call
# Example: NGROK_FETCH_URL=https://abc123.ngrok.io/api
NGROK_FETCH_URL=

# OpenAI API Key for ReAct reasoning
OPENAI_API_KEY=sk-example-placeholder-replace-with-your-actual-key

# thirdweb Configuration
THIRDWEB_SECRET_KEY=example-thirdweb-secret-key-replace-with-your-actual-key
THIRDWEB_API_URL=https://api.thirdweb.com/v1

# CLI Agent Wallet Configuration
# This wallet signs payments on behalf of the CLI shopping agent
CLI_AGENT_WALLET_IDENTIFIER=your_wallet_id

# Blockchain Configuration
NETWORK=base-sepolia
USDC_CONTRACT=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Agents API Configuration
PORT=3002
# NODE_ENV - Set to 'development' to use NGROK_FETCH_URL, 'production' to use API_BASE_URL
NODE_ENV=development

# Frontend URL for CORS (optional - for production frontend)
# FRONTEND_URL=https://your-frontend.vercel.app

# Optional: Database connection for persistent agent storage
# DATABASE_URL=postgresql://user:password@localhost:5432/agents_db
